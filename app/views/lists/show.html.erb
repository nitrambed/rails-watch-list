<div class="container">
  <h1>Movies <%= @list.name %></h1>
  <h2>Take a look at our Movies</h2>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
        <%# <img src="..." class="card-img-top" alt="..."> %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to "Delete bookmark", bookmark_path(bookmark), method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a movie", new_list_bookmark_path(@list) %>
  <%= link_to "Delete List", list_path(@list), method: :delete %>
  <%= link_to "Back to lists", lists_path %>
</div>
